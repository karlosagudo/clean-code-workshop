includes:
	- ./phpstan-baseline.neon

parameters:
    level: 5
    tmpDir: var/cache/PHPStan
    paths:
        - bin/
        - config/
        - public/
        - src/
        - tests/Architecture/
    excludePaths:
        analyseAndScan:
            - src/Application/Exceptions
            - src/Infrastructure/DB/Fixtures/
            - src/Infrastructure/Service/Print/
            - src/Kernel.php
            - tests
    phpat:
        ignore_built_in_classes: true
        show_rule_names: true
services:
    -
        class: App\Tests\Architecture\HexagonalTest
        tags:
            - phpat.test
